<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EFEF"
    tools:context=".OfferMentoringActivity">

    <ImageView
        android:id="@+id/IMG_signup_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/img_offer_mentor">

    </ImageView>

    <EditText
        android:id="@+id/EDT_course_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:elevation="5dp"
        android:background="@drawable/rounded_edit_txt"
        android:layout_below="@+id/IMG_signup_img"
        android:hint="course name"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />

    <EditText
        android:id="@+id/EDT_code_course"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:elevation="5dp"
        android:background="@drawable/rounded_edit_txt"
        android:layout_below="@+id/EDT_course_name"
        android:hint="code course"
        android:inputType="numberPassword"
        android:paddingLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />



    <EditText
        android:id="@+id/EDT_course_grade"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:elevation="5dp"
        android:background="@drawable/rounded_edit_txt"
        android:layout_below="@+id/EDT_code_course"
        android:hint="my grade"
        android:inputType="phone"
        android:paddingLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>



    <EditText
        android:id="@+id/EDT_course_level"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:elevation="5dp"
        android:background="@drawable/rounded_edit_txt"
        android:layout_below="@+id/EDT_course_grade"
        android:hint="my level knowledge"
        android:paddingLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:inputType="textAutoCorrect" />

    <Button
        android:id="@+id/BTNadd"
        android:layout_below="@+id/EDT_course_level"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#B471F0"
        android:elevation="5dp"
        android:text="ADD"
        android:background="@drawable/rounded_edit_txt"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="#131212"
        android:textSize="23sp"
        android:textStyle="bold"
        />


</RelativeLayout>